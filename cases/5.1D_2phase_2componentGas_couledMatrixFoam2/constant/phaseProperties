FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      phaseProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type basicMultiphaseSystem;

phases (water gas rock);

 water
{
    type            pureIsothermalPhaseModel;
    rho0            1000;
    psi             0;
    mu              0.001;
    residualAlpha   1e-6;
}

/* water
{
    type            multiComponentPorousIsothermalPhaseModel;
    species         2(CO2 H2O);
    rho0.CO2            1000;
    rho0.H2O            1000;
    psi.CO2             0;
    psi.H2O             0;
    mu              0.001;
    residualAlpha   1e-6;
}*/


gas
{
    type            multiComponentIsothermalPhaseModel;
    species         2(CO2 H2O);
    rho0.CO2            1;
    rho0.H2O            1;
    psi.CO2             0;
    psi.H2O             0;
    mu              1.76e-05;
    residualAlpha   1e-6;
}

rock
{
    type            purePorousIsothermalPhaseModel;
    rho0            2713;
    psi             0;
    residualAlpha   1e-6;
}

momentum
{
    water_relativeWith_rock
    {
        type        Darcy;
        KrModel     BrooksAndCorey;
        eta         2;
    }

    gas_relativeWith_rock
    {
        type        Darcy;
        KrModel     BrooksAndCorey;
        eta         2;
    }
}

massTransfer{}

capillarity
{
    water_relativeWith_gas
    {
        type        BrooksAndCorey;
        pc0         0.0001;
        zeta        0.5;
        eta         2;
    }
}

